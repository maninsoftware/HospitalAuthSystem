<Window x:Class="HospitalLoginApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hospital PC Login"
        Height="700" Width="900"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Main Login Card -->
        <Border Background="White"
                CornerRadius="15"
                Width="300"
                Height="200"
                Padding="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#DDD"
                BorderThickness="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="➡️"
           FontSize="22"
           FontWeight="Bold"
           Foreground="#333"
           HorizontalAlignment="Center"
           Margin="0,0,0,10"/>
                <TextBlock Text="Welcome !"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Horizontal button group -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="🔐" FontSize="18" Width="55" Height="50" Click="BtnCredentialLogin_Click"  Margin="10"/>
                    <Button Content="👤" FontSize="18" Width="55" Height="50" Click="BtnFaceLogin_Click" Margin=" 10"/>
                    <Button Content="➕" FontSize="18" Width="55" Height="50" Click="BtnRegister_Click" Margin=" 10"/>

                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
