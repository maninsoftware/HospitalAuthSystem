<Window x:Class="HospitalLoginApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hospital PC Login"
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Background="Transparent">
        <!-- Main Login Card -->
        <Border Background="White"
                CornerRadius="15"
                Width="700"
                Height="600"
                Padding="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{DynamicResource DropShadow}">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,20">
                    <Button Content="Credential Login" Width="150" Margin="5" Click="BtnCredentialMode_Click"/>
                    <Button Content="Face Login" Width="150" Margin="5" Click="BtnFaceMode_Click"/>
                    <Button Content="Register" Width="150" Margin="5" Click="BtnRegisterMode_Click"/>
                </StackPanel>

                <!-- Credential Login Panel -->
                <Grid Grid.Row="1" Name="CredentialPanel" Visibility="Visible">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
                        <TextBox Name="txtUsername" Margin="5" Text="Username" GotFocus="ClearText" LostFocus="RestoreText"/>
                        <PasswordBox Name="txtPassword" Margin="5"/>
                        <Button Content="Login" Click="BtnLogin_Click" Margin="5"/>
                    </StackPanel>
                </Grid>

                <!-- Face Login Panel -->
                <Grid Grid.Row="1" Name="FacePanel" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Name="imgWebcam" Width="400" Height="300" Margin="5"/>
                        <Button Content="Verify Face" Click="BtnFaceVerify_Click" Margin="5"/>
                    </StackPanel>
                </Grid>

                <!-- Register Panel -->
                <Grid Grid.Row="1" Name="RegisterPanel" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
                        <StackPanel Margin="5">
                            <TextBlock Text="Username" Margin="0,0,0,5"/>
                            <TextBox Name="regUsername"/>
                        </StackPanel>
                        <StackPanel Margin="5">
                            <TextBlock Text="Password" Margin="0,0,0,5"/>
                            <PasswordBox Name="regPassword" />
                        </StackPanel>
                        <Image Name="regWebcam" Width="400" Height="300" Margin="5"/>
                        <Button Content="Register" Click="BtnRegister_Click" Margin="5"/>
                    </StackPanel>
                </Grid>

                <!-- Status Message -->
                <TextBlock Name="lblStatus" Grid.Row="2" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10"/>
            </Grid>
        </Border>
    </Grid>
</Window>
