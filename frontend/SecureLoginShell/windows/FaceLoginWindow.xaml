<Window x:Class="HospitalLoginApp.Windows.FaceLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Face Login" Height="350" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Grid Background="White">
        <Button Content="⬅️"  Width="48" Height="36" Click="BtnBack_Click" ToolTip="Back" Margin="5,5,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <StackPanel>
                <TextBlock Text="Face Login" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                <Image x:Name="imgWebcam" Height="200" Margin="0,0,0,10" />

                <Button Content="Verify Face" Click="BtnFaceVerify_Click" Width="150" Height="35" 
                        HorizontalAlignment="Center" Background="#007ACC" Foreground="White"/>

                <TextBlock x:Name="lblStatus" Foreground="Blue" FontWeight="SemiBold" Margin="0,10,0,0" TextWrapping="Wrap"/>
            </StackPanel>
        
    </Grid>
</Window>
