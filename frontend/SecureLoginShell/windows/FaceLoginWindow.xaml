<Window x:Class="HospitalLoginApp.Windows.FaceLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Face Login"   
            WindowStyle="None"
          AllowsTransparency="True"
          Background="Transparent"
          WindowStartupLocation="CenterScreen">
    
    <Grid Background="Transparent" >
        <Border Background="White"
            Width="400" Height="300"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="10"
            Padding="20"
            BorderBrush="#CCC"
            BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Button Content="⬅️"  Width="48" Height="36" Click="BtnBack_Click" ToolTip="Back"  VerticalAlignment="Top" HorizontalAlignment="Left"/>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- ✅ Always-visible Back Button -->
                
                <TextBlock Text="Face Login" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                <Image x:Name="imgWebcam" Height="150" Margin="0,0,0,10" />

                <Button Content="Verify Face" Click="BtnFaceVerify_Click" Width="150" Height="35" 
                        HorizontalAlignment="Center" Background="#007ACC" Foreground="White"/>

            <TextBlock x:Name="lblStatus" Foreground="Red" FontWeight="SemiBold" Margin="0,10,0,0" TextWrapping="Wrap"/>

        </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
