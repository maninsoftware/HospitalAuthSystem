<Window x:Class="HospitalLoginApp.Windows.CredentialLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credential Login"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Grid Background="Transparent">
        <Border Background="White"
                Width="400" Height="320"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                CornerRadius="10"
                Padding="20"
                BorderBrush="#CCC"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- ✅ Always-visible Back Button -->
                <Button Content="⬅️"  Width="48" Height="36" Click="BtnBack_Click" ToolTip="Back"  VerticalAlignment="Top" HorizontalAlignment="Left"/>


                <!-- Main Form Stack -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="280">
                    <TextBlock Text="Credential Login"
                               FontSize="20"
                               FontWeight="Bold"
                               Margin="0,0,0,15"
                               HorizontalAlignment="Center"/>

                    <TextBox x:Name="txtUsername"
                             Height="30" Margin="0,5"
                             Text="Username" Foreground="Gray"
                             GotFocus="txtUsername_GotFocus" LostFocus="txtUsername_LostFocus"/>

                    <PasswordBox x:Name="txtPassword"
                                 Height="30" Margin="0,5"
                                 Password="Password" Foreground="Gray"
                                 GotFocus="txtPassword_GotFocus" LostFocus="txtPassword_LostFocus"
                                 Tag="placeholder"/>

                    <Button Content="Login"
                            Width="100" Height="35"
                            Margin="0,15,0,0"
                            Click="BtnLogin_Click"
                            Background="#007ACC" Foreground="White"/>

                    <TextBlock x:Name="lblStatus"
                               Foreground="Red"
                               FontWeight="SemiBold"
                               Margin="0,10,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
